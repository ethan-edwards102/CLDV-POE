@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<div class="container mt-5">
    <!-- Back to List Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">View All Venues</a>
    </div>

    <!-- Venue Details Card -->
    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.VenueName" style="height: 300px; object-fit: cover;">
        <div class="card-body">
            <h2 class="card-title">@Model.VenueName</h2>
            <p class="card-text"><strong>Location:</strong> @Model.Location</p>
            <p class="card-text"><strong>Capacity:</strong> @Model.Capacity seats</p>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
