@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="container mt-4">
    
    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">View All Venues</a>
    </div>

    <!-- Form -->
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete the following venue? This action cannot be undone.</p>
            <dl class="row">
                <dt class="col-sm-3">Venue Name:</dt>
                <dd class="col-sm-9">@Model.VenueName</dd>

                <dt class="col-sm-3">Location:</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3">Capacity:</dt>
                <dd class="col-sm-9">@Model.Capacity</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="VenueId"/>
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>