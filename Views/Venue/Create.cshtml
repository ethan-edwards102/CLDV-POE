@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Create Venue";
}

<div class="container mt-5">
    <h2 class="mb-4">Create New Venue</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="VenueName" class="form-label">Venue Name</label>
                    <input asp-for="VenueName" class="form-control" required />
                    <div class="invalid-feedback">
                        Please enter a venue name.
                    </div>
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" required />
                    <div class="invalid-feedback">
                        Please enter a location.
                    </div>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label">Capacity (Seats)</label>
                    <input asp-for="Capacity" type="number" class="form-control" required />
                    <div class="invalid-feedback">
                        Please enter the seating capacity.
                    </div>
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" type="url" class="form-control" required />
                    <div class="invalid-feedback">
                        Please provide a valid image URL.
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create Venue</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap custom validation
        (function () {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
