@model EventEase.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <!-- Back to List Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">View All Events</a>
    </div>

    <!-- Event Details Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.EventName</h4>
            <h6 class="card-subtitle mb-2 text-muted">@Model.EventDate.ToString("MMMM dd, yyyy")</h6>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
