@model EventEase.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">View All Events</a>
    </div>

    <!-- Form -->
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete the following event? This action cannot be undone.</p>
            <dl class="row">
                <dt class="col-sm-3">Event Name:</dt>
                <dd class="col-sm-9">@Model.EventName</dd>

                <dt class="col-sm-3">Event Date:</dt>
                <dd class="col-sm-9">@Model.EventDate.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="EventId" />
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>