@model EventEase.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        
        <!-- Header -->
        <div class="card-header">
            <h4>Edit Event</h4>
        </div>
        
        <!-- Form -->
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EventId"/>

                <!-- Event Name -->
                <div class="form-group mb-3">
                    <label asp-for="EventName" class="form-label">Event Name</label>
                    <input asp-for="EventName" class="form-control" required/>
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>

                <!-- Event Date -->
                <div class="form-group mb-3">
                    <label asp-for="EventDate" class="form-label">Event Date</label>
                    <input asp-for="EventDate" type="date" class="form-control" required/>
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validation (Needed for Bootstrap forms)
        (function () {
            'use strict'

            // Find all forms
            var forms = document.querySelectorAll('.needs-validation')

            // Validate all fields
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}