@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-5">
    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">View All Bookings</a>
    </div>

    <!-- Details Card (Otto and Thornton, 2021a) -->
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Booking Details</h2>

            <p class="card-text">
                <strong>Event:</strong> @Model.Event?.EventName
            </p>
            <p class="card-text">
                <strong>Venue:</strong> @Model.Venue?.VenueName
            </p>
            <p class="card-text">
                <strong>Booking Date:</strong> @Model.BookingDate.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="card-footer text-muted">
            <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>