@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to EventEase</h1>
        <p class="lead">Your one-stop solution for managing events and venues with ease.</p>
    </div>

    <!-- Features Section -->
    <div class="row text-center">
        <div class="col-lg-4">
            <i class="bi bi-calendar-event h1"></i>
            <h2 class="h4 mt-3">Manage Events</h2>
            <p>Effortlessly create, edit, and oversee your events with our user-friendly interface.</p>
        </div>
        <div class="col-lg-4">
            <i class="bi bi-geo-alt h1"></i>
            <h2 class="h4 mt-3">Venue Listings</h2>
            <p>Browse and manage a comprehensive list of venues suitable for any occasion.</p>
        </div>
        <div class="col-lg-4">
            <i class="bi bi-people h1"></i>
            <h2 class="h4 mt-3">Bookings</h2>
            <p>Keep track of all your bookings and ensure seamless event planning.</p>
        </div>
    </div>
</div>