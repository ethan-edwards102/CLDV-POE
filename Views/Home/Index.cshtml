@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    
    <!-- Heading -->
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to EventEase</h1>
        <p class="lead">Your one-stop solution for managing events, bookings and venues with ease.</p>
    </div>

    <!-- Features -->
    <div class="row text-center">
        
        <div class="col-lg-4">
            <i class="bi bi-calendar-event h1"></i>
            <h2 class="h4 mt-3">Manage Events</h2>
            <p>Effortlessly create, edit, and oversee events happening in the area.</p>
        </div>
        
        <div class="col-lg-4">
            <i class="bi bi-geo-alt h1"></i>
            <h2 class="h4 mt-3">Venue Listings</h2>
            <p>Browse our comprehensive list of venues, suitable for any event.</p>
        </div>
        
        <div class="col-lg-4">
            <i class="bi bi-people h1"></i>
            <h2 class="h4 mt-3">Bookings</h2>
            <p>Keep track of all your bookings and ensure seamless, collision free event planning.</p>
        </div>
    </div>
</div>